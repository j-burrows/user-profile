@model UserProfileLib.Business.BAvatar
@using User_Profile.Helpers

@{Model.Format();}

@using (Html.BeginForm("Avatar_Delete", "Home", FormMethod.Post, 
    new {
        @id = "AvatarDelete_" + Model.Avatar_ID,
        @class = "AvatarDelete PartialUpdateForm"
    })) { 
    @Model.ValidationErrors["Data"].ValidationSection()
    
    <input type="hidden" value="@Model.Avatar_ID" name="Avatar_ID"/>
    @Model.ValidationErrors["Avatar_ID"].ValidationSection()
    
    <input type="submit" value="Delete Avatar" />
}