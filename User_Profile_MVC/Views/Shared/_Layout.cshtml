<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My ASP.NET MVC Application</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

	<!--[if lte IE 9]>
    <link type="text/css" href="@Url.Content("~/Content/IESite.css")" rel="stylesheet" />  
    @RenderSection("NavStyle", required : false)
	<![endif]-->
</head>
<body>
	<section id="mainSection">
		<header id="banner">
            <img id="Logo" src="@Url.Content("~/Images/Logo.png")" />
			<span id="bannerHeader">JonathanBurrows.Org</span>
            @RenderSection("LogoffButton", required: false)
			@RenderSection("NavSection", required: false)
		</header>
		<section id="mainContent">
			<article class="article">
                @RenderBody()
			</article>
		</section>
		<footer id="footer">
			<h1 id="footerHeader">Related Links:</h1>
			<section id="relatedLinks" class="flexContainer">
				<a class="relatedLink linkAnimate flexComponent">Related <br>One</a> 
				<a class="relatedLink linkAnimate flexComponent">Related Two</a> 
				<a class="relatedLink linkAnimate flexComponent">Related Three</a>
				<a class="relatedLink linkAnimate flexComponent">Related Four</a>
			</section>
		 <aside id="copyrightStamp">© 2013 Jonathan Burrows</aside>
		</footer>
	</section>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
    <script src="/Scripts/jquery-1.7.1.js"></script>
    <script src="@Url.Content("~/Scripts/FormValidation.js")" type="text/javascript"></script>
</body>
</html>
